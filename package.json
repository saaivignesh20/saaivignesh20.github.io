{
    "name": "saai-vignesh-portfolio",
    "version": "1.0.0",
    "description": "Modern portfolio website for Saai Vignesh - Full Stack Developer",
    "main": "index.html",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "serve": "python3 -m http.server 8000",
        "lint": "eslint scripts/**/*.js",
        "lint:fix": "eslint scripts/**/*.js --fix",
        "format": "prettier --write \"**/*.{js,css,html,md}\"",
        "format:check": "prettier --check \"**/*.{js,css,html,md}\"",
        "test": "echo \"Tests not implemented yet\" && exit 0",
        "validate": "npm run lint && npm run format:check",
        "clean": "rm -rf dist .cache",
        "deploy": "npm run build && echo 'Deploy to your hosting provider'",
        "audit": "npm audit --audit-level moderate",
        "start": "npm run dev"
    },
    "keywords": [
        "portfolio",
        "website",
        "developer",
        "full-stack",
        "javascript",
        "css",
        "html",
        "modern",
        "responsive"
    ],
    "author": {
        "name": "Saai Vignesh",
        "email": "saaivignesh@example.com",
        "url": "https://saaivignesh.in"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/saaivignesh20/portfolio-website.git"
    },
    "bugs": {
        "url": "https://github.com/saaivignesh20/portfolio-website/issues"
    },
    "homepage": "https://saaivignesh.in",
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@types/node": "^20.0.0",
        "autoprefixer": "^10.4.19",
        "cssnano": "^6.1.2",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.3",
        "globals": "^15.0.0",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "vite": "^5.2.10",
        "vite-plugin-html": "^3.2.2"
    },
    "dependencies": {},
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 90,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "browser": true,
            "es2022": true
        },
        "parserOptions": {
            "ecmaVersion": 2022,
            "sourceType": "module"
        },
        "rules": {
            "no-console": "warn",
            "no-unused-vars": "error",
            "prefer-const": "error",
            "no-var": "error"
        }
    },
    "volta": {
        "node": "20.11.1",
        "npm": "10.5.0"
    }
}
